{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "node",
      "outDir": "./dist",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "resolveJsonModule": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "allowImportingTsExtensions": true,
      "noEmit": true 
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }
  